<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_tests"
        android:layout_width="326dp"
        android:layout_height="104dp"
        android:layout_marginBottom="216dp"
        android:onClick="onClickGoTests"
        android:text="ПСИХОЛОГИЧЕСКОЕ ТЕСТИРОВАНИЕ"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="222dp"
        android:layout_height="76dp"
        android:layout_marginBottom="52dp"
        android:onClick="onClickGoExit"
        android:text="ВЫХОД"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_techniki"
        android:layout_width="326dp"
        android:layout_height="104dp"
        android:layout_marginBottom="336dp"
        android:onClick="onClickGoTechniki"
        android:text="ПСИХОЛОГИЧЕСКИЕ ТЕХНИКИ"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_help"
        android:layout_width="326dp"
        android:layout_height="104dp"
        android:layout_marginBottom="460dp"
        android:onClick="onClickGoHelp"
        android:text="ПОМОЩЬ ПСИХОЛОГА"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_MPS"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:background="@color/design_default_color_secondary"
        android:backgroundTint="@color/teal_200"
        android:text="Mobile Psychologist"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button_tests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

</androidx.constraintlayout.widget.ConstraintLayout>